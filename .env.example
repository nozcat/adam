# Linear API Configuration
# Create an API key at https://linear.app/settings/api
LINEAR_API_KEY=

# GitHub Configuration
# Create a personal access token at https://github.com/settings/tokens
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_EMAIL=

# Base branch for pull requests
BASE_BRANCH=main

# Whether to print debug logs
DEBUG=false

# Poll interval in seconds for checking Linear issues and GitHub PR feedback
# Default: 30 seconds
POLL_INTERVAL=30

# Directory where git repositories are stored
# Default: ./repos
REPOS_DIR=./repos

# Auto-update interval in seconds (Docker only)
# How often to check for repository updates when running in Docker
# Default: 300 seconds (5 minutes)
AUTO_UPDATE_INTERVAL=300