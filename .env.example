# Linear API Configuration
# Create an API key at https://linear.app/settings/api
LINEAR_API_KEY=

# GitHub Configuration
# Create a personal access token at https://github.com/settings/tokens
GITHUB_TOKEN=

# GitHub repository information
# This should be the repository adam will work on (not the adam repo itself)
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# Target repository directory (optional)
# If not set, defaults to current working directory
# Can be absolute or relative path
TARGET_REPO=/path/to/target/repository

# Base branch for pull requests
BASE_BRANCH=main

# Polling interval in milliseconds for checking Linear issues
POLLING_INTERVAL_MS=30000

# Whether to print debug logs
DEBUG=false