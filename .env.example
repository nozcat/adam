# Linear API Configuration
# Create an API key at https://linear.app/settings/api
LINEAR_API_KEY=

# GitHub Configuration
# Create a personal access token at https://github.com/settings/tokens
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_EMAIL=

# Base branch for pull requests
BASE_BRANCH=main

# Whether to print debug logs
DEBUG=false

# Poll interval in seconds for checking Linear issues and GitHub PR feedback
# Default: 30 seconds
POLL_INTERVAL=30

# Directory where git repositories are stored
# Default: ./repos
REPOS_DIR=./repos

# Claude Code Configuration
# Get your API key at https://console.anthropic.com/
# This enables automatic authentication in Docker containers
ANTHROPIC_API_KEY=